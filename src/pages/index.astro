---
import { site } from "../site"
import Layout from "../layouts/Layout.astro"
import MagazineSection from "../components/MagazineSection.astro"
---

<Layout title={site.pages.index.title} desc={site.pages.index.description}>
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-content">
      <div class="hero-text">
        <h1 class="hero-title">FOLLY <br> MAGAZINE</h1>
        <p class="hero-subtitle">
          An Oxford student magazine publishing long-form creative work in literature, politics, and the arts.
        </p>
      </div>
      <div class="hero-graphics">
        <!-- Decorative graphics placeholder -->
        <img src="/images/fin.png" alt="Oxford Illustration" class="hero-illustration" />
      </div>
    </div>
  </section>

  <!-- Magazine Content Section -->
  <div class="magazine-section-wrapper">
    <MagazineSection />
  </div>
</Layout>

<style>
  /* Reset for this page */
  :global(body) {
    margin: 0;
    padding: 0;
    padding-top: 0; /* Remove the fixed nav padding for full-height hero */
    max-width: none;
  }
  
  @media (max-width: 80rem) {
    :global(body) {
      padding: 0; /* Override the responsive padding for index */
    }
  }
  
  :global(main) {
    gap: 0;
  }



  /* Hero Section */
  .hero-section {
    background: var(--light);
    color: var(--dark);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    position: relative;
    overflow: hidden;
  }



  .hero-content {
    flex: 1;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
    padding: 6rem 3rem 3rem 3rem;
    max-width: 1512px;
    margin: 0 auto;
    width: 100%;
  }

  .hero-text {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .hero-graphics {
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 1;
  }

  .hero-illustration {
    max-width: 100%;
    width: 100%;
    height: auto;
  }

  .hero-title {
    font-family: 'Libre Baskerville', serif;
    font-size: clamp(3.5rem, 7vw, 7rem);
    font-weight: 400;
    line-height: 1;
    margin: 0 0 1rem 0 !important;
    letter-spacing: -0.02em;
  }

  .hero-subtitle {
    font-family: 'Alata', sans-serif;
    /* font-style: italic; */
    font-size: 1.25rem;
    line-height: 1.4;
    max-width: 600px;
    margin: 0;
  }

  /* Magazine Section */
  .magazine-section {
    background: var(--light);
    color: var(--dark);
    padding: 2rem 0;
    min-height: 100vh;
  }

  .magazine-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .issue-title {
    font-family: 'Libre Baskerville', serif;
    font-size: 5rem;
    font-weight: 400;
    margin: 0 0 1rem 0;
  }

  .issue-date {
    font-family: 'Libre Baskerville', serif;
    font-style: italic;
    font-size: 1.25rem;
    color: var(--dark);
  }

  .articles-container {
    max-width: 1512px;
    margin: 0 auto;
    padding: 0 3rem;
  }

  .category-section {
    margin-bottom: 4rem;
  }

  .category-header {
    margin-bottom: 2rem;
    position: relative;
  }

  .category-header::after {
    content: '';
    position: absolute;
    left: 0;
    top: -3px;
    width: 90vw;
    height: 3px;
    background: var(--accent);
  }

  .category-tag {
    background: var(--accent);
    color: var(--light);
    padding: 0.75rem 2rem;
    font-family: 'Alata', sans-serif;
    font-size: 1.25rem;
    font-weight: 500;
    display: inline-block;
    position: relative;
  }

  .articles-list {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    margin-top: 2rem;
  }

  @media (min-width: 768px) {
    .articles-list {
      grid-template-columns: 1fr 1fr;
      gap: 4rem 3rem;
    }
  }

  .article-preview {
    max-width: 600px;
  }

  .article-title {
    font-family: 'Libre Baskerville', serif;
    font-size: 2.5rem;
    font-weight: 400;
    line-height: 1.1;
    margin: 0 0 0.5rem 0;
  }

  .article-title a {
    color: var(--dark);
    text-decoration: none;
    transition: opacity 0.2s;
  }

  .article-title a:hover {
    color: var(--accent);
  }

  .article-author {
    font-family: 'Libre Baskerville', serif;
    font-style: italic;
    font-size: 1rem;
    color: var(--dark);
    margin: 0 0 1rem 0;
  }

  .article-excerpt {
    font-family: 'Libre Baskerville', serif;
    font-size: 1rem;
    line-height: 1.5;
    color: var(--dark);
    margin: 0;
    text-align: justify;
  }

  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }

  /* Hero Animations - Desktop Only */
  @media (min-width: 769px) {
    @keyframes fadeInLeft {
      from {
        opacity: 0;
        transform: translateX(-50px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    @keyframes fadeInRight {
      from {
        opacity: 0;
        transform: translateX(50px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    @keyframes scaleIn {
      from {
        opacity: 0;
        transform: scale(0.9);
      }
      to {
        opacity: 1;
        transform: scale(1);
      }
    }
  }

  /* Disable animations on mobile for performance */
  @media (max-width: 768px) {
    .hero-text,
    .hero-graphics,
    .hero-illustration {
      animation: none;
    }
  }


  /* Hide magazine section on mobile */
  .magazine-section-wrapper {
    display: block;
  }

  @media (max-width: 768px) {
    .magazine-section-wrapper {
      display: none;
    }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .hero-content {
      grid-template-columns: 1fr;
      padding: 4rem 1rem 3rem 1rem;
    }

    .hero-graphics {
      order: -1;
    }

    .hero-title {
      font-size: clamp(2.5rem, 6vw, 4rem);
    }

    .articles-container {
      padding: 0 1rem;
    }

    .issue-title {
      font-size: 3rem;
    }

    .article-title {
      font-size: 2rem;
    }
  }
</style>

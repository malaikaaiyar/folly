---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import { formatTitle } from "../../utils.js";

// Generate static paths for all published articles
export async function getStaticPaths() {
  const articlesEntries = await getCollection("articles");
  
  return articlesEntries
    .filter(article => article.data.published)
    .map(article => ({
      params: { slug: article.slug },
      props: { article },
    }));
}

// Get the article data from props
const { article } = Astro.props;

// Render the article content
const { Content } = await article.render();

// Format the title
const formattedTitle = formatTitle(article.data.title);
// Page description: show on article page only; fall back to description when not set
const pageDescription = article.data.pageDescription ?? article.data.description;
---

<Layout
  title={article.data.title}
  desc=""
  rightColumnImage={article.data.image}
  rightColumnCaption={article.data.imageCaption}
  rightColumnScrollImages={article.data.scrollImages}
  noImageFallback
>
  <div class="post-page">
    <div class="content-container">
      <div class="post-header">
        <h1 class="page-title" set:html={formattedTitle}></h1>
        <div class="post-meta">
          {article.data.author && <p class="post-author">{article.data.author} | {article.data.category}</p>}
          {pageDescription && (
            <p class="post-description" set:html={pageDescription} />
          )}
        </div>
        <!-- <hr> -->
      </div>
      
      <div class="post-content-wrapper">
        <div class="post-content">
          <Content />
        </div>
      </div>
    </div>
  </div>
</Layout>
<style>
  .post-header {
    margin-bottom: 2rem;
  }

  .post-meta {
    margin-bottom: 0.5rem;
  }

  .post-author {
    font-family: 'Libre Baskerville', serif;
    font-size: 1.3rem;
    font-style: italic;
    color: var(--dark);
  }

  .post-description {
    font-family: "Standard", sans-serif;
    font-size: 1rem;
    line-height: 1.5;
    color: var(--dark);
    font-style: italic;
    margin: 0.8rem 0 0 0;
    line-height: 1.5;
  }

  .post-description :global(.roman) {
    font-style: normal;
  }

  .post-content-wrapper {
    display: block;
  }

  .post-content, .post-description {
    font-family: "Standard", sans-serif;
    font-size: 1rem;
    line-height: 1.5;
    color: var(--dark);
  }

  .post-content :global(p) {
    margin-bottom: 1.875rem;
  }

  .post-content :global(p:last-child) {
    margin-bottom: 0;
  }

  .post-content :global(h2) {
    font-family: "Standard", sans-serif;
    font-size: 1.5rem;
    font-weight: 400;
    margin: 2.5rem 0 1.5rem 0;
    line-height: 1.2;
  }

  .post-content :global(h3) {
    font-family: "Standard", sans-serif;
    font-size: 1.25rem;
    font-weight: 400;
    margin: 2rem 0 1rem 0;
    line-height: 1.3;
  }

  .post-content :global(blockquote) {
    font-family: "Standard", sans-serif;
    border-left: 3px solid var(--dark);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--dark);
  }

  .post-content :global(strong) {
    font-weight: 700;
  }

  .post-content :global(em) {
    font-style: italic;
  }

  .post-content :global(a) {
    color: var(--dark);
  }


  @media (max-width: 768px) {
    
    .post-meta {
      margin-bottom: 2rem;
    }

    .post-description,
    .post-content {
      font-size: 1rem;
      line-height: 1.7;
    }

    .post-content :global(p) {
      margin-bottom: 1.5rem;
    }
    
    .post-content :global(h2) {
      font-size: 1.25rem;
      margin: 2rem 0 1rem 0;
    }
    
    .post-content :global(h3) {
      font-size: 1.1rem;
      margin: 1.5rem 0 0.75rem 0;
    }
  }

  @media (max-width: 480px) {
    
    .post-header {
      margin-bottom: 2rem;
    }
    
    .post-meta {
      margin-bottom: 1.5rem;
    }
    
    .post-content :global(p) {
      margin-bottom: 1.25rem;
    }
    
    .post-content :global(h2) {
      font-size: 1.15rem;
      margin: 1.5rem 0 0.75rem 0;
    }
    
    .post-content :global(h3) {
      font-size: 1rem;
      margin: 1.25rem 0 0.5rem 0;
    }
    
    .post-content :global(blockquote) {
      padding-left: 1rem;
      margin: 1.5rem 0;
    }
  }
</style> 

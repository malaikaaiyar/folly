---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import { formatTitle } from "../../utils.js";

// Generate static paths for all published articles
export async function getStaticPaths() {
  const articlesEntries = await getCollection("articles");
  
  return articlesEntries
    .filter(article => article.data.published)
    .map(article => ({
      params: { slug: article.slug },
      props: { article },
    }));
}

// Get the article data from props
const { article } = Astro.props;

// Render the article content
const { Content } = await article.render();

// Format the title
const formattedTitle = formatTitle(article.data.title);
---

<Layout title={article.data.title} desc="">
  <div class="post-page">
    <div class="post-container">
      <div class="post-header">
        <h1 class="post-title" set:html={formattedTitle}></h1>
        <div class="post-meta">
          <div class="post-divider"></div>
          {article.data.author && <p class="post-author">{article.data.author}</p>}
          <time class="post-date">5 May 2025</time>
        </div>
      </div>
      
      <div class={`post-content-wrapper ${article.data.image ? 'has-image' : 'no-image'}`}>
        <div class="post-content">
          <Content />
        </div>
        {article.data.image && (
          <div class="post-image">
            <img src={article.data.image} alt="Article illustration" />
          </div>
        )}
      </div>
    </div>
  </div>
</Layout>

<style>
  .post-page {
    background: var(--light);
    min-height: 100vh;
    padding: 2rem 0;
  }

  .post-container {
    max-width: 70vw;
    margin: 0 auto;
    padding: 0 3rem;
  }

  .post-header {
    margin-bottom: 3rem;
  }

  .post-title {
    font-family: 'Libre Baskerville', serif;
    font-size: 3.5rem;
    font-weight: 400;
    color: var(--dark);
    margin: 0 0 2rem 0;
    line-height: 1;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 100%;
  }

  .post-meta {
    position: relative;
    margin-bottom: 2rem;
  }

  .post-divider {
    width: 100%;
    height: 3px;
    background: var(--accent);
    margin-bottom: 1rem;
  }

  .post-author {
    font-family: 'Libre Baskerville', serif;
    font-style: italic;
    font-size: 1rem;
    color: var(--accent);
    margin: 0;
    max-width: 430px;
  }

  .post-date {
    font-family: 'Libre Baskerville', serif;
    font-style: italic;
    font-size: 1.25rem;
    color: var(--accent);
    position: absolute;
    right: 0;
    top: 1rem;
  }

  .post-content-wrapper.has-image {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  .post-content-wrapper.no-image {
    display: flex;
    justify-content: center;
  }

  .post-content-wrapper.no-image .post-content {
    max-width: 744px;
  }

  .post-content {
    font-family: 'Libre Baskerville', serif;
    font-size: 1rem;
    line-height: 1.875;
    color: var(--dark);
    text-align: justify;
  }

  .post-content :global(p) {
    margin-bottom: 1.875rem;
  }

  .post-content :global(p:last-child) {
    margin-bottom: 0;
  }

  .post-content :global(h2) {
    font-family: 'Libre Baskerville', serif;
    font-size: 1.5rem;
    font-weight: 400;
    margin: 2.5rem 0 1.5rem 0;
    line-height: 1.2;
  }

  .post-content :global(h3) {
    font-family: 'Libre Baskerville', serif;
    font-size: 1.25rem;
    font-weight: 400;
    margin: 2rem 0 1rem 0;
    line-height: 1.3;
  }

  .post-content :global(blockquote) {
    border-left: 3px solid var(--accent);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--dark);
  }

  .post-content :global(strong) {
    font-weight: 700;
  }

  .post-content :global(em) {
    font-style: italic;
  }

  .post-image {
    position: sticky;
    top: 8rem;
  }

  .post-image img {
    width: 100%;
    height: auto;
    max-width: 599px;
    border-radius: 0;
  }

  @media (max-width: 80rem) {
    .post-container {
      padding: 0 1.5rem;
    }
  }

  @media (max-width: 1200px) {
    .post-content-wrapper.has-image {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
    
    .post-content-wrapper.has-image .post-image {
      position: static;
      order: -1;
    }
  }

  @media (max-width: 768px) {
    .post-title {
      font-size: 3rem;
    }
    
    .post-date {
      position: static;
      margin-top: 1rem;
    }
    
    .post-content-wrapper.has-image {
      gap: 2rem;
    }
  }
</style> 
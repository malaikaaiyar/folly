<style>
  .about-page {
    background: var(--light);
    min-height: 100vh;
    padding: 2rem 0;
  }

  .about-container {
    max-width: 80vw;
    margin: 0 auto;
    padding: 0 3rem;
  }

  .about-title {
    font-family: 'Libre Baskerville', serif;
    font-size: 5rem;
    font-weight: 400;
    text-align: center;
    color: var(--dark);
    margin: 0 0 4rem 0;
    line-height: 1;
  }

  .section {
    margin-bottom: 4rem;
    position: relative;
  }

  .section-divider {
    width: 100%;
    height: 3px;
    background: var(--accent);
    margin-bottom: 1rem;
  }

  .section-title {
    font-family: 'Alata', sans-serif;
    font-size: 1.25rem;
    font-weight: 400;
    color: var(--accent);
    margin: 0 0 2rem 0;
    line-height: 1;
  }

  .section-content {
    font-family: 'Libre Baskerville', serif;
    font-size: 1rem;
    line-height: 1.6;
    color: var(--dark);
    max-width: 744px;
    text-align: justify;
    margin: 0;
  }

  .masthead-content {
    font-family: 'Libre Baskerville', serif;
    font-size: 1rem;
    line-height: 1.6;
    color: var(--dark);
    max-width: 744px;
  }

  .masthead-entry {
    display: flex;
    align-items: baseline;
    margin-bottom: 0.625rem;
    overflow: hidden;
  }

  .masthead-entry:last-child {
    margin-bottom: 0;
  }

  .name {
    flex-shrink: 0;
    font-weight: 400;
  }

  .dots {
    flex: 1;
    overflow: hidden;
    white-space: nowrap;
    margin: 0 0.25rem;
    font-weight: 400;
  }

  .role {
    flex-shrink: 0;
    font-style: italic;
  }

  @media (max-width: 80rem) {
    .about-container {
      padding: 0 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .about-title {
      font-size: 3rem;
    }
    
    .section {
      margin-bottom: 3rem;
    }
    
    .masthead-entry {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }
    
    .dots {
      display: none;
    }
  }
</style>

                          

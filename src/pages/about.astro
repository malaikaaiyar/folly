---
import Layout from "../layouts/Layout.astro"
import { site } from "../site"
import { getCollection, getEntry } from 'astro:content';
import Back from "../components/Back.astro"
import Header from "../components/Header.astro"

const page = await getEntry('pages', 'about')
const { Content, headings } = await page.render();
const authors = await getCollection('authors')
---
<Layout title={site.pages.about.title} desc={site.pages.about.description}>

  <article>
  <Header
    title={page.data.title}
    description={page.data.description}
    created={page.data.created}
    updated={page.data.updated}
   />
    <Content />
    <div class="about-content">
      <div class="editorial-section">
        <h2 id="authors">Editorial</h2>
        <br>
        <p>Charlie Goldberg</p>
        <br>
        <p>Faye Chang</p>
        <br>
        <p>Olivier Berg</p>
        <br>
        <p>Geo Maur-Batsaki</p>
        <br>
        <p>Jiayue Shi</p>
        <br>
        <p>Hassan Akram</p>
        <br>
        <p>Morien Robertson</p>
        <br>  
        <p>Lara Machado</p>
        <br>
        <h2 id="authors">Design</h2>
        <br>
        <p>Malaika Aiyar</p>
        <br>
        <p>Niamh Durnin</p>
        <br>
        <p>Moli Birkinshaw</p>
        <br>
        <p>Zander Fitzgerald</p>
      </div>
      <div class="image-section">
        <img src="images/oxford-sketch.png" alt="Oxford sketch" class="oxford-image">
      </div>
    </div>
  </article>
</Layout>

                          

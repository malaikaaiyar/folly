---
import { site } from "../site"
import OptimizedImage from "./OptimizedImage.astro"
---

<aside class="sidebar">
  <a href="/" class="sidebar-title">FOLLY</a>
  <nav class="sidebar-nav">
    {site.navigation.map((link) => (
      <a href={link.url} class="sidebar-link">{link.title}</a>
    ))}
  </nav>
  <a href="/" class="sidebar-logo" aria-label="Home">
    <OptimizedImage src="/images/folly-logo-figma.png" alt="" class="sidebar-logo-img" width={72} height={72} />
  </a>
</aside>

<style>
  .sidebar {
    position: sticky;
    top: 0;
    align-self: start;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 100vh;
    padding: 3rem;
    background: var(--light);
  }

  .sidebar-title {
    font-family: 'Libre Baskerville', serif;
    font-size: clamp(2rem, 3vw, 3rem);
    font-weight: 400;
    color: var(--dark);
    text-decoration: none;
    letter-spacing: -0.02em;
    line-height: 1;
  }

  .sidebar-title:hover {
    opacity: 0.8;
  }

  .sidebar-nav {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 2rem;
  }

  .sidebar-link {
    font-family: 'Libre Baskerville', serif;
    font-size: 1.25rem;
    color: var(--dark);
    text-decoration: none;
  }

  .sidebar-link:hover {
    opacity: 0.8;
  }

  .sidebar-logo {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    text-decoration: none;
    color: var(--dark);
    margin-top: auto;
  }

  .sidebar-logo:hover {
    opacity: 0.8;
  }

  .sidebar-logo-img {
    width: 36px;
    height: auto;
    filter: brightness(0) saturate(100%) invert(8%) sepia(95%) saturate(1352%) hue-rotate(88deg) brightness(94%) contrast(101%);
  }

  @media (max-width: 900px) {
    .sidebar {
      position: static;
      flex-direction: row;
      align-items: center;
      min-height: auto;
      padding: 1rem;
    }

    .sidebar-nav {
      flex-direction: row;
      margin-top: 0;
      margin-left: 2rem;
      gap: 1.5rem;
    }

    .sidebar-logo {
      margin-top: 0;
      margin-left: auto;
    }
  }

  @media (max-width: 640px) {
    .sidebar {
      flex-wrap: wrap;
      padding: 1rem;
    }

    .sidebar-nav {
      order: 3;
      width: 100%;
      margin-left: 0;
      margin-top: 1rem;
    }

    .sidebar-logo {
      margin-left: auto;
    }
  }
</style>

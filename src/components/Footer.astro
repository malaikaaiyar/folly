---
import { site } from "../site"
---

<footer>
  <div class="footer-content">
    <div class="footer-links">
      <a href="/">Home</a>
      <a href="/about">Masthead</a>
      <a href="/magazine">Magazine</a>
      <a href="/support">Apply</a>
    </div>
    <div class="footer-logo">
      <img src="/images/folly-footer-logo.png" alt="Folly Logo" />
    </div>
  </div>
</footer>

<style>
  footer {
    background: var(--light);
    padding: 2.5rem 0;
    border-top: none;
    margin-top: 4rem;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    max-width: 1512px;
    margin: 0 auto;
    padding: 0 3rem;
    position: relative;
    min-height: 120px;
  }

  .footer-links {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    font-family: 'Libre Baskerville', serif;
    font-size: 1.25rem;
    line-height: 1.3;
  }

  .footer-links a {
    color: var(--dark);
    text-decoration: none;
    transition: opacity 0.2s;
  }

  .footer-links a:hover {
    color: var(--accent);
  }

  .footer-logo {
    position: absolute;
    right: 3rem;
    top: 0;
  }

  .footer-logo img {
    width: 30px;
    height: 39px;
    filter: brightness(0) saturate(100%) invert(8%) sepia(95%) saturate(1352%) hue-rotate(88deg) brightness(94%) contrast(101%); /* Make it dark green #02330C */
  }

  @media (max-width: 80rem) {
    .footer-content {
      padding: 0 1.5rem;
    }
    
    .footer-logo {
      right: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    footer {
      padding: 2rem 0;
    }
    
    .footer-content {
      flex-direction: column;
      align-items: flex-start;
      min-height: auto;
    }
    
    .footer-logo {
      position: static;
      margin-top: 2rem;
    }
  }
</style>
